@model int

@{
    ViewData["Title"] = "My Products";
    var UserID = ViewData["UserID"];
    var products = ViewData["Products"] as List<POEPART1.Models.productTable>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KhumaloCraft Emporium</title>

    <!-- External stylesheets -->
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <section class="sub-header">
        <!-- Sub-header -->
        <h1>KhumaloCraft Emporium: My Products</h1>
    </section>

    <section class="MyWork">
        <!-- Description -->
        <h3>
            <p>
                Please choose from the list of products below and select "Place Order" to let us know what you want and to speed up the delivery process for you:

                James Khumalo's vision birthed KhumaloCraft Emporium, a global e-commerce platform showcasing handcrafted treasures. Our mission is to bridge artisans worldwide with a discerning audience. Each product reflects not just skill, but also cultural heritage, curated for quality and authenticity.

                Beyond transactions, we empower artisans economically and socially, providing a global stage for sustainable livelihoods and traditional arts. KhumaloCraft isn't just a marketplace; it's a vibrant exchange of stories, fostering connections and appreciation.

                Join us in celebrating the beauty of handmade craftsmanship. Your purchase supports the talent and creativity of artisans worldwide.
            </p>
        </h3>
    </section>

    @if (UserID != null)
    {
        <p>User ID: @UserID</p>
    }

    <h2>All Products</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Availability</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice</td>
                    <td>@product.ProductCategory</td>
                    <td>@product.ProductAvailability</td>
                    <td>
                        <form asp-controller="Transaction" asp-action="PlaceOrder" method="post">
                            <input type="hidden" name="UserID" value="@UserID" />
                            <input type="hidden" name="ProductID" value="@product.ProductID" />
                            <button type="submit" class="btn btn-primary">Place Order</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Include Bootstrap JS and dependencies at the end of the body -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDuJzTep7j2IQm1dKjCwMF4V0csYjzlyB53O7PeJcLlI0xEktI" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgF5ihicL5YGAzNsXMrDz4rw5US6dcBiEPh2W1z4Zth0fapIljr" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            // Show signup modal on page load
            $('#signupModal').modal('show');

            // Optionally, if you want to show the login modal instead, use the line below:
            // $('#loginModal').modal('show');
        });
    </script>

    <!-- Footer -->
    <section class="footer">
        <div class="icons">
            <!-- Social media icon -->
            <a href="https://www.instagram.com/khumalocraftemporium_/"><i class="fa fa-instagram"></i></a>
        </div>
        <p><i class="fa fa-trademark"></i> 2024 KhumaloCraft Emporium</p>
    </section>
</body>
</html>
