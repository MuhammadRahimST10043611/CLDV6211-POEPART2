@model POEPART1.Models.productTable

@{
    ViewData["Title"] = "My Work";
}
<head>
    <!-- Meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KhumaloCraft Emporium</title>

    <!-- External stylesheets -->
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;600;700&display=swap" rel="stylesheet">
</head>

    <section class="sub-header">
        <!-- Sub-header -->
        <h1>KhumaloCraft Emporium: Celebrating Artisanal Excellence</h1>
    </section>

    <section class="MyWork">
        <!-- Description -->
        <h3>
            <p>
                James Khumalo's vision birthed KhumaloCraft Emporium, a global e-commerce platform showcasing handcrafted treasures. Our mission: bridge artisans worldwide with a discerning audience. Each product reflects not just skill, but also cultural heritage, curated for quality and authenticity.

                Beyond transactions, we empower artisans economically and socially, providing a global stage for sustainable livelihoods and traditional arts. KhumaloCraft isn't just a marketplace; it's a vibrant exchange of stories, fostering connections and appreciation.

                Join us in celebrating the beauty of handmade craftsmanship. Your purchase supports the talent and creativity of artisans worldwide.
            </p>
        </h3>
    </section>
    <h1>Add Work Below</h1>

    <style>
        /* Add some margin to the form */
        form {
            margin-bottom: 20px; /* Adjust the value as needed */
        }
    </style>
    <body>
        <form asp-action="MyWork" asp-controller="Product" method="post">
            <p>Please Insert new products</p>
            <input type="text" name="ProductName" placeholder="Name" required />
            <input type="number" name="ProductPrice" placeholder="0" required />
            <input type="text" name="ProductCategory" placeholder="Category" required />
            <input type="number" name="ProductAvailability" placeholder="0" required />
            <button type="submit">Submit</button>
        </form>
    </body>


    <body>
        <div class="slideshow-container">
            <!-- Slideshow images -->
            <div class="mySlides fade">
                <div class="numbertext">1 / 3</div>
                <img src="~/images/slideshowimg1.jpg" alt="Image 1">
            </div>

            <div class="mySlides fade">
                <div class="numbertext">2 / 3</div>
                <img src="~/images/slideshowimg2.jpg" alt="Image 2">
            </div>

            <div class="mySlides fade">
                <div class="numbertext">3 / 3</div>
                <img src="~/images/slideshowimg3.jpg" alt="Image 3">
            </div>

            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>

        <!-- Footer -->
        <section class="footer">
            <div class="icons">
                <!-- Social media icon -->
                <a href="https://www.instagram.com/khumalocraftemporium_/"><i class="fa fa-instagram"></i></a>
            </div>
            <p><i class="fa fa-trademark"></i> 2024 KhumaloCraft Emporium</p>
        </section>

        <!-- JavaScript for Toggle Menu -->
        <script>
            var navLinks = document.getElementById("navLinks");
            function showMenu() {
                navLinks.style.right = "0";
            }
            function hideMenu() {
                navLinks.style.right = "-200px";
            }

            // Slideshow functionality
            var slideIndex = 0;
            showSlides();

            function showSlides() {
                var i;
                var slides = document.getElementsByClassName("mySlides");
                var dots = document.getElementsByClassName("dot");
                for (i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                }
                slideIndex++;
                if (slideIndex > slides.length) {
                    slideIndex = 1;
                }
                for (i = 0; i < dots.length; i++) {
                    dots[i].className = dots[i].className.replace(" active", "");
                }
                slides[slideIndex - 1].style.display = "block";
                dots[slideIndex - 1].className += " active";
                setTimeout(showSlides, 2000); // Change image every 2 seconds
            }

            // Next/previous controls
            function plusSlides(n) {
                showSlides(slideIndex += n);
            }

            // Thumbnail image controls
            function currentSlide(n) {
                showSlides(slideIndex = n);
            }

            // Preload images
            var images = [];
            var imageUrls = [
                "~/images/slideshowimg1.jpg",
                "~/images/slideshowimg2.jpg",
                "~/images/slideshowimg3.jpg"
            ];
            for (var i = 0; i < imageUrls.length; i++) {
                images[i] = new Image();
                images[i].src = imageUrls[i];
            }
        </script>
    </body>
